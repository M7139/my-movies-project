<%- include("../partials/_header") %>


<form action="/movies" method="GET">
  <input type="text" name="movie_name" required />
  <button type="submit">Search</button>
</form>

<ul>
  <% if (movies && movies.length > 0) { %>
    <% movies.forEach(movie => { %>
      <li>
        <a href="/movies/<%= movie.imdbID %>">
          <strong><%= movie.Title %></strong> (<%= movie.Year %>)
        </a>
        <br />
        <img src="<%= movie.Poster ? movie.Poster : '/Default/default_movie_poster.jpg' %>" 
             alt="Poster for <%= movie.Title %>" 
             width="100" />
      </li>
    <% }) %>
  <% } else if (searchTerm) { %>
    <li>No movies found for "<%= searchTerm %>"</li>
  <% } else { %>
    <li>Type a movie name to search.</li>
  <% } %>
</ul>