<%- include("../partials/_header") %>
<div class="movie-grid">
  <% if (movies && movies.length > 0) { %> <% movies.forEach(movie => { %>
  <div class="movie-card">
    <a href="/movies/<%= movie.imdbID %>">
      <img
        src="<%= movie.Poster ? movie.Poster : '/Default/default_movie_poster.jpg' %>"
        alt="<%= movie.Title %>"
        class="movie-poster"
      />
      <div class="movie-info">
        <h3><%= movie.Title %></h3>
        <p>(<%= movie.Year %>)</p>
      </div>
    </a>
  </div>
  <% }) %> <% } else { %>
  <p class="no-results">
    <%= searchTerm ? 'No results for "' + searchTerm + '"' : 'Type a movie name to search' %>
  </p>
  <% } %>
</div>
<%- include("../partials/_footer") %>
